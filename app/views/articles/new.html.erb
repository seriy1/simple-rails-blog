<h1>New Article</h1>
<p class="danger">
  <% if @article && @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg| %>
      <span><%= msg %>&comma;&nbsp;</span>
    <% end %>
  <% end %>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br/>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>